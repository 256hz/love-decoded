{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [ "es2020" ],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@assets/*": ["assets/*"],
      "@screens/*": ["src/screens/*"],
      "@elements": ["src/elements/index"],
      "@elements/*": ["src/elements/*"],
      "@redux/*": ["src/redux/*"],
    },
    "types": [ "jest" ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules",
    "jest.config.js"
  ]
}
